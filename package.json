{
	"name": "vscode-allofthem",
	"displayName": "All Of Them",
	"description": "Add Save All and Close All buttons to the editor",
	"icon": "media/save-close-128.png",
	"version": "1.0.1",
	"license": "MIT",
	"publisher": "cseelye",
	"author": {
		"name": "Carl Seelye",
		"email": "cseelye@gmail.com"
	},
	"bugs": {
		"url": "https://github.com/cseelye/vscode-allofthem/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cseelye/vscode-allofthem.git"
	},
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"save",
		"close",
		"save all",
		"close all",
		"saveall"
	],
	"main": "./dist/extension.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "workbench.action.closeAllEditors",
				"title": "Close All Files",
				"icon": "$(close-all)"
			},
			{
				"command": "workbench.action.files.saveFiles",
				"title": "Save All Files",
				"icon": "$(save-all)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "workbench.action.files.saveFiles",
					"group": "navigation"
				},
				{
					"command": "workbench.action.closeAllEditors",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "workbench.action.files.saveFiles",
					"group": "1_close@1"
				}
			]
		}
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"ts-loader": "^9.2.8",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	}
}
